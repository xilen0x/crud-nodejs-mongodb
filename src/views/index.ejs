<%- include("./partials/_header") %>
<style>
    body{background-color:#f5fbfd; color: rgb(0, 0, 0);}
    table{background-color: white;}
</style> 

<div class="container">
    <div>
        <div class="row">
       
        <h1 class="offset-md-4 mb-4">
            Lista de tareas
        </h1>
    </div>
    <div class="row">
        <!-- Formulario -->
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Inserte un titulo" name="title" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control" placeholder="Inserte una descripción" name="description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
                <!-- Lista -->
                <div class="col-md-8 mt-5 offset-md-2">
                    <table class="table table-bordered table-hover table-responsive-md">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Título</th>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let size = tasks.length; %>
                            <% for (let i = 0; i < size; i++) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= tasks[i].title %></td>
                                    <td><%= tasks[i].description %></td>
                                    <td>
                                        <a href="/switch/<%= tasks[i]._id %>" class="<%= tasks[i].status ? 'btn btn-success btn-block btn-sm' : 'btn btn-light btn-block btn-sm' %>">Realizado</a>
                                        <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger btn-block btn-sm"> Eliminar </a>
                                        <a href="/edit/<%= tasks[i]._id %>" class="btn btn-warning btn-block btn-sm">Editar</a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
    </div>
</div>
<%- include("./partials/_footer") %>